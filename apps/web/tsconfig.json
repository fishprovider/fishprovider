{
  "extends": "../../tsconfig.frontend.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@fishbot/utils*": ["../../packages/utils/dist*"],
      "@fishbot/cross*": ["../../packages/cross/dist*"],
      "~*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", "**/*.tsx",
    "**/*.js", "**/*.jsx",
  ],
  "exclude": [
    "node_modules",
  ],
  "references": [
    { "path": "../../packages/utils" },
    { "path": "../../packages/cross" }
  ]
}
