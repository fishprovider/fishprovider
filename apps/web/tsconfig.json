{
  "extends": "../../tsconfig.frontend.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", "**/*.tsx",
    "**/*.js", "**/*.jsx",
  ],
  "exclude": [
    "node_modules",
  ],
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/cross"
    }
  ]
}
