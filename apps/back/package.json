{
  "name": "@fishbot/back",
  "version": "5.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint --cache --fix --ignore-pattern dist .",
    "type-check": "tsc --noEmit",
    "test": "npm run test-unit",
    "test-unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test-int": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules doppler run --print-config -- npx jest --runInBand",
    "build": "rm -rf dist && mkdir dist && cp package.json dist && node esbuild.cjs",
    "build-watch": "cross-env WATCH_MODE=true npm run build",
    "start": "doppler run --print-config -- node --experimental-specifier-resolution=node dist/index.js",
    "start-watch": "doppler run --print-config -- nodemon --experimental-specifier-resolution=node --delay 1 dist/index.js",
    "dev": "concurrently -k 'npm run build-watch' 'npm run start-watch'"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "glob": "^10.3.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "mongodb": "^5.6.0",
    "notion-client": "^6.16.0",
    "openai": "^3.3.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "esbuild": "^0.18.10"
  }
}