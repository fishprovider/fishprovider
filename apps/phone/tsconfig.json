{
  "extends": [
    "../../tsconfig.json",
    "@tsconfig/react-native/tsconfig.json",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/tmp",
    ".expo",
  ]
}
