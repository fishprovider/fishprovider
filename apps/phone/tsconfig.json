{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx", "index.js", "*.config.js"],
  "exclude": ["node_modules", ".expo"],
  "references": [
    { "path": "../../packages/utils" },
    { "path": "../../packages/cross" }
  ]
}
