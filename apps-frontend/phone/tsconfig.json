{
  "extends": "@tsconfig/react-native/tsconfig.json",
  // "extends": [
  //   "../../tsconfig.json",
  //   "@tsconfig/react-native/tsconfig.json",
  // ],
  "compilerOptions": {
    "composite": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"],
    },
    "rootDir": ".",
    "outDir": "dist",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/tmp",
    ".expo",
  ],
  "references": [
    { "path": "../../packages/utils" },
    { "path": "../../packages-share/core" },
    { "path": "../../packages-frontend/core-frontend" },
    { "path": "../../packages-frontend/local-first" },
  ]
}
